<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/color_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/img_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@color/color_background</item>
        <item name="android:windowBackground">@color/color_background</item>
    </style>

    <style name="Header">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/big_text</item>
    </style>

    <style name="Body">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="Body.Bold">
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="Body.Description">
        <item name="android:textColor">@color/color_white_80</item>
    </style>

    <style name="Caption">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="Caption.Medium">
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="Caption.Description">
        <item name="android:textColor">@color/color_white_80</item>
    </style>

    <style name="Caption.Highlight">
        <item name="android:textColor">@color/color_caption</item>
    </style>

    <style name="Error">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="Shimmer">
        <item name="android:background">@drawable/bg_shimmer_rounded_4</item>
    </style>
</resources>