<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/little_margin"
    android:layout_marginBottom="@dimen/little_margin"
    android:orientation="vertical">

    <View
        android:id="@+id/view_image"
        style="@style/Shimmer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_show_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_title"
        style="@style/Shimmer"
        android:layout_width="@dimen/item_show_width"
        android:layout_height="15dp"
        android:layout_marginTop="@dimen/little_margin"
        app:layout_constraintBottom_toTopOf="@id/view_artist"
        app:layout_constraintStart_toEndOf="@id/view_image"
        app:layout_constraintTop_toTopOf="@id/view_image"
        app:layout_constraintVertical_chainStyle="packed" />

    <View
        android:id="@+id/view_artist"
        style="@style/Shimmer"
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:layout_marginTop="@dimen/little_margin"
        app:layout_constraintBottom_toBottomOf="@id/view_image"
        app:layout_constraintStart_toStartOf="@id/view_title"
        app:layout_constraintTop_toBottomOf="@id/view_title"
        app:layout_constraintVertical_chainStyle="packed" />

</LinearLayout>