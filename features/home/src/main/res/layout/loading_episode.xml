<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_episode"
            style="@style/Shimmer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/show_img_background_height"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_title"
            style="@style/Shimmer"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/big_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_episode" />

        <View
            android:id="@+id/view_season"
            style="@style/Shimmer"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/little_margin"
            app:layout_constraintStart_toStartOf="@id/view_title"
            app:layout_constraintTop_toBottomOf="@id/view_title" />

        <View
            android:id="@+id/view_rate"
            style="@style/Shimmer"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/default_margin"
            app:layout_constraintStart_toStartOf="@id/view_title"
            app:layout_constraintTop_toBottomOf="@id/view_season" />

        <View
            android:id="@+id/view_runtime"
            style="@style/Shimmer"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/default_margin"
            app:layout_constraintStart_toEndOf="@id/view_rate"
            app:layout_constraintTop_toTopOf="@id/view_rate" />

        <View
            android:id="@+id/view_air_date"
            style="@style/Shimmer"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/default_margin"
            app:layout_constraintStart_toEndOf="@id/view_runtime"
            app:layout_constraintTop_toTopOf="@id/view_rate" />

        <View
            android:id="@+id/view_summary_label"
            style="@style/Shimmer"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/big_margin"
            app:layout_constraintStart_toStartOf="@id/view_title"
            app:layout_constraintTop_toBottomOf="@id/view_air_date" />

        <View
            android:id="@+id/view_summary"
            style="@style/Shimmer"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="@dimen/default_margin"
            android:layout_marginTop="@dimen/little_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_summary_label" />

        <View
            android:id="@+id/view_summary_2"
            style="@style/Shimmer"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="@dimen/default_margin"
            android:layout_marginTop="@dimen/little_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_summary" />

        <View
            android:id="@+id/view_summary_3"
            style="@style/Shimmer"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="@dimen/default_margin"
            android:layout_marginTop="@dimen/little_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_summary_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>